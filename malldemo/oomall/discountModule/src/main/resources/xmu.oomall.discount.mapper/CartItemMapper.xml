<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xmu.oomall.discount.mapper.CartItemMapper">


    <select id="findCartItemById" parameterType="Integer" resultType="cartItem">
        select *
        from cart_item where id = #{cartId}
    </select>


    <select id="findProductPrice" parameterType="Integer" resultType="BigDecimal">
        select price
        from product where id = #{productId}
    </select>
</mapper>
