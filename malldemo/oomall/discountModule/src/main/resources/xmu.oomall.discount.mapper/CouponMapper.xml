<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xmu.oomall.discount.mapper.CouponMapper">


    <select id="findCouponRuleById" parameterType="Integer" resultType="couponRulePo">
            select *
                    from oomall_coupon_rule where id = #{id}
    </select>


    <insert id="addCouponRule" parameterType="couponRulePo" useGeneratedKeys="true" keyProperty="id">
        insert into oomall_coupon_rule(name,brief,begin_time,end_time,pic_url,valid_period,strategy,goods_list1,goods_list2,gmt_create,gmt_modified,is_deleted)
        values (#{name},#{brief},#{beginTime},#{endTime},#{picUrl},#{validPeriod},#{strategy},#{goodsList1},#{goodsList2},#{gmtCreate},#{gmtModified},#{beDeleted})
    </insert>

    <insert id="addCoupon" parameterType="couponPo" useGeneratedKeys="true" keyProperty="id">
        insert into oomall_coupon(user_id,coupon_rule_id,coupon_sn,begin_time,end_time,used_time,name,pic_url,gmt_create,gmt_modified,is_deleted,status)
        values (#{userId},#{couponRuleId},#{couponSn},#{beginTime},#{endTime},#{usedTime},#{name},#{picUrl},#{gmtCreate},#{gmtModified},#{beDeleted},#{statusCode})
    </insert>

    <select id="getCouponList" resultType="couponRulePo">
        select *
        from oomall_coupon_rule;
    </select>

    <delete id="deleteCouponRuleById" parameterType="Integer">
        update oomall_coupon_rule set is_deleted=1 where id = #{id};
    </delete>

    <update id="updateCouponRuleById" parameterType="couponRulePo" >
        update oomall_coupon_rule
        <trim prefix="set" suffixOverrides=",">
            <if test="name!=null">name=#{name},</if>
            <if test="brief!=null">brief=#{brief},</if>
            <if test="beginTime!=null">beginTime=#{beginTime},</if>
            <if test="endTime!=null">endTime=#{endTime},</if>
            <if test="picUrl!=null">picUrl=#{picUrl},</if>
            <if test="validPeriod!=null">validPeriod=#{validPeriod},</if>
            <if test="strategy!=null">strategy=#{strategy},</if>
            <if test="total!=null">total=#{total},</if>
            <if test="goodsList1!=null">goodsList1=#{goodsList1},</if>
            <if test="goodsList2!=null">goodsList2=#{goodsList2},</if>
            <if test="gmtCreate!=null">gmtCreate=#{gmtCreate},</if>
            <if test="gmtModified!=null">gmtModified=#{gmtModified},</if>
            <if test="beDeleted!=null">beDeleted=#{beDeleted},</if>

        </trim>
        WHERE id=#{id}
    </update>

    <select id="getCouponMyList" parameterType="Integer" resultType="couponPo">
        select *
        from oomall_coupon where user_id=#{userId} and statusCode=0;
    </select>

    <select id="getProductId" parameterType="Integer" resultType="Integer">
        select product_id
        from oomall_cart_item where id=#{itemId};
    </select>

    <select id="getGoodsId" parameterType="Integer" resultType="Integer">
        select goods_id
        from oomall_product where id=#{goodsId};
    </select>

    <select id="getCouponRule" parameterType="Integer" resultType="couponRulePo">
        select *
        from oomall_coupon_rule where id=#{couponRuleId};
    </select>

    <select id="findCouponById" parameterType="Integer" resultType="couponPo">
        select * from oomall_coupon where id = #{id}
    </select>

    <select id="getProductPrice" parameterType="Integer" resultType="BigDecimal">
        select price from oomall_product where id = #{goodsId}
    </select>

    <update id="updateCouponStatus" parameterType="Integer" >
        update oomall_coupon
        set status=1 where coupon_rule_id = #{id};
    </update>

</mapper>