<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xmu.oomall.discount.mapper.PresaleMapper">


    <insert id="add" parameterType="PresaleRule" useGeneratedKeys="true" keyProperty="id">
        insert into oomall_presale_rule(id,goods_id,start_time,ad_end_time,final_start_time,end_time,
                                  status,gmt_create, gmt_modified, is_deleted,deposit,final_payment)
        values (#{id},#{goodsId},#{startTime},#{adEndTime},#{finalStartTime},#{endTime},
                #{statusCode},#{gmtCreate}, #{gmtModified}, #{beDeleted},#{deposit},#{finalPayment})
    </insert>

    <delete id="deleteById" parameterType="Integer">
        delete from oomall_presale_rule  where id=#{id};
    </delete>

    <select id="findPresaleRuleById" resultType="PresaleRule" parameterType="Integer">
        select *
        from oomall_presale_rule
        where id= #{id}
    </select>

    <select id="findByGoodsId" resultType="presaleRule" parameterType="Integer">
        select *
        from oomall_presale_rule
        where goods_id= #{goodsId}
    </select>

    <update id="updateById"  parameterType="presaleRule" >
        update oomall_presale_rule
        <trim prefix="set" suffixOverrides=",">
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
            <if test="beDeleted != null">
                is_deleted = #{beDeleted},
            </if>
            <if test="startTime != null">
                start_time = #{startTime},
            </if>
            <if test="adEndTime != null">
                ad_end_time = #{adEndTime},
            </if>
            <if test="finalStartTime != null">
                final_start_time = #{finalStartTime},
            </if>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
            <if test="statusCode != null">
                status = #{statusCode},
            </if>
            <if test="deposit != null">
                deposit=#{deposit},
            </if>
            <if test="finalPayment != null">
                final_payment=#{finalPayment},
            </if>
        </trim>
        where id=#{id}
    </update>


</mapper>