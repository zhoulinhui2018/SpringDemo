<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xmu.oomall.xmu.oomall.footprint.mapper.FootprintMapper">

    <select id="getUserFootprintList" resultType="FootprintItem" parameterType="Integer">
        select *
        from footprint_item
        where user_id= #{userId};
    </select>

    <insert id="addFootprint" parameterType="FootprintItem" useGeneratedKeys="true" keyProperty="id">
      insert into footprint_item
      (gmt_create, birth_time,user_id,goods_id)
        values (#{gmtCreate}, #{birthTime},#{userId},#{goodsId});
    </insert>

    <delete id="deleteFootprint" parameterType="integer">
        delete from footprint_item
        where id=#{id};
    </delete>

    <select id="AdminFindFootprint" resultType="FootprintItem" parameterType="Integer">
        select *
        from address
        where id=#{id}
    </select>

</mapper>