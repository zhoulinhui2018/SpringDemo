<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xmu.oomall.mapper.GroupOnRuleMapper">


    <select id="findPromotionByGoodsId" resultType="promotionPo" parameterType="Integer">
        select id, begin_time, end_time, promotion_sn, pay_strategy, add_time, update_time, be_deleted, descr
        from promotion
        where goods_id = #{id}
    </select>

    <select id="findGroupOnRuleById" resultType="GroupOnRule" parameterType="Integer">
        select *
        from groupon_rule
        where id= #{id}
    </select>


    <update id="updateById"  parameterType="GroupOnRule" >
        update groupon_rule
        <trim prefix="set" suffixOverrides=",">
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
            <if test="beDeleted != null">
                is_deleted = #{beDeleted},
            </if>
            <if test="startTime != null">
                start_time = #{startTime},
            </if>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
            <if test="statusCode != null">
                statusCode = #{statusCode},
            </if>
            <if test="grouponLevelStrategy != null">
                groupon_level_strategy=#{grouponLevelStrategy},
            </if>
            <if test="goodsId != null">
                goods_id=#{goodsId},
            </if>
        </trim>
        where id=#{id}
    </update>

    <select id="searchGrouponGoods" resultType="GroupOnRule" parameterType="Integer">
        select *
        from groupon_rule
        where goods_id=#{goodsId}
    </select>

    <insert id="add" parameterType="GroupOnRule" useGeneratedKeys="true" keyProperty="id">
        insert into groupon_rule (gmt_create, gmt_modified, is_deleted,
        start_time, end_time, statusCode,
        groupon_level_strategy, goods_id)
        values (#{gmtCreate}, #{gmtModified}, #{beDeleted},
        #{startTime}, #{endTime}, #{statusCode},
        #{grouponLevelStrategy}, #{goodsId})
    </insert>

    <delete id="delete" parameterType="GroupOnRule">
        delete from groupon_rule  where id=#{id};
    </delete>
</mapper>